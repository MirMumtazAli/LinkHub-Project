@model LHDAL.DAos.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/_Layout.cshtml";
}

<br />
<h2>Delete Category</h2>
<hr />

<h4>Are you sure you want to delete this category?</h4>

<div>
    <dl class="row mb-3">
        <dt class="col-sm-3">Category Name:</dt>
        <dd class="col-sm-9">@Model.CategoryName</dd>

        <dt class="col-sm-3">Category Description:</dt>
        <dd class="col-sm-9">@Model.CategoryDescription</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.CategoryId" />

        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
    </form>
</div>
