    <table id="categoriesTable" class="table table-bordered border-3 border-light table-hover w-100">
    <thead class="table-primary">
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Description</th>
            <th>Action</th>

        </tr>
    </thead>
</table>
</div>
